extends layout
block content
	include ./includes/navigation.jade
	+navi('首页')
	section.main
		div.master-body
			ul.articles-preview
				each val,index in result
					li.article-display 
						a.article-content.hover-scale(href="/article?title=#{val.oTitle}")
							div.image-container
								img(src="images/del/nodejs.png")
							div.article-view
								h1.article-title #{val.tTitle}	 
								- var preVs = val.tContent.toString().substr(0,50)
									p.article-paragraph
										|preview: #{preVs}...
		aside.aside-area
			div.aside-inside aside area mabe dor ads
				:marked
					# markdown
						for()
							console.log()
						sd
					codeend
	script(src="/javascripts/jquery.min.js" type="text/javascript")
	script(src="/javascripts/typescript.min.js" type="text/javascript")		
	script
		:typescript
			exec.start();
		
			


